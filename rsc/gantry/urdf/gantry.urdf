<?xml version="1.0"?>
<robot name="doubleCartPole">
    <link name="world"></link>

    <joint name="world_to_sliderBar" type="fixed">
        <axis xyz="0 0 0"/>
        <origin xyz="0.0 0.0 5.0"/>
        <parent link="world"/>
        <child link="slide"/>
    </joint>

    <link name="slide">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="40"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 1.5708 0"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <joint name="slider" type="prismatic">
        <axis xyz="0 1 0"/>
        <origin xyz="0.0 0.0 0.0"/>
        <parent link="slide"/>
        <child link="slider"/>
    </joint>

    <link name="slider">
        <inertial>
            <mass value="5"/>
            <inertia ixx="2.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="2.0"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.3 0.3 0.2"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </visual>
    </link>

    <joint name="bar_revolute" type="prismatic">
        <axis xyz="1 0 0"/>
        <parent link="slider"/>
        <child link="rod1"/>
        <origin xyz="0.0 0.0 0"/>
    </joint>

    <link name="rod1">
        <inertial>
            <origin xyz="0 0 0.5"/>
            <mass value="3"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.8"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.5"/>
        </visual>
    </link>

    <joint name="rod_prismatic" type="prismatic">
        <axis xyz="0 0 1"/>
        <parent link="rod1"/>
        <child link="rod2"/>
        <origin xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="rod2">
        <inertial>
            <origin xyz="0 0 0.5"/>
            <mass value="2"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.8"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.5"/>
        </visual>
    </link>

    <joint name="ball_fixed" type="fixed">
        <axis xyz="0 1 0"/>
        <parent link="rod2"/>
        <child link="ball"/>
        <origin xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="ball">
        <inertial>
            <origin xyz="0 0 0.5"/>
            <mass value="0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </visual>
    </link>

</robot>